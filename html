  <script>
    var productsDB=[], rowCount=0;
    window.onload = function() {
      var d = new Date(); document.getElementById('dashDate').value = d.toISOString().split('T')[0];
      document.getElementById('reportMonth').value = d.getMonth()+1; document.getElementById('reportYear').value = d.getFullYear();
      loadInitialData(); 
    };
    function toggleView(v) {
        document.getElementById(v==='report'?'main-view':'report-view').classList.add('hidden');
        document.getElementById(v==='report'?'report-view':'main-view').classList.remove('hidden');
        if(v==='report') loadReportData();
    }
    // Report Logic
    function loadReportData() {
        var m=document.getElementById('reportMonth').value, y=document.getElementById('reportYear').value;
        document.getElementById('reportContent').innerHTML='<div class="text-center py-5">Loading...</div>';
        google.script.run.withSuccessHandler(renderReport).getReportData(m,y);
    }
    function renderReport(res){
        if(res.status!=='success'){ document.getElementById('reportContent').innerHTML='No Data'; return; }
        var fmt=(n)=>n.toLocaleString('en-US',{minimumFractionDigits:2});
        var h=`<div class="col-md-4"><div class="report-card"><div class="report-icon icon-money"><i class="fa-solid fa-sack-dollar"></i></div><div class="report-title">‡∏£‡∏ß‡∏°‡∏¢‡∏≠‡∏î‡∏Ç‡∏≤‡∏¢</div><div class="report-value text-success">${fmt(res.summary.total)}</div></div></div>
               <div class="col-md-4"><div class="report-card"><div class="report-icon icon-jetski"><i class="fa-solid fa-water"></i></div><div class="report-title">Jetski</div><div class="report-value text-primary">${fmt(res.summary.jetski.amount)}</div></div></div>
               <div class="col-md-4"><div class="report-card"><div class="report-icon icon-pp"><i class="fa-solid fa-ship"></i></div><div class="report-title">PP Tour</div><div class="report-value text-warning">${fmt(res.summary.pp.amount)}</div></div></div>`;
        document.getElementById('reportContent').innerHTML=h;
        // Table logic simplified
        var t=`<table class="table mt-3"><thead><tr><th>‡∏ß‡∏±‡∏ô‡∏ó‡∏µ‡πà</th><th class="text-end">‡∏¢‡∏≠‡∏î‡∏£‡∏ß‡∏°</th><th class="text-center">Jetski</th><th class="text-center">PP Tour</th></tr></thead><tbody>`;
        res.daily.forEach(d=>{ t+=`<tr><td>${d.dateStr}</td><td class="text-end fw-bold">${fmt(d.total)}</td><td class="text-center">${d.jetski.count} ‡∏Ñ‡∏±‡∏ô</td><td class="text-center">${d.pp.count} ‡∏ó‡∏µ‡πà</td></tr>`; });
        document.getElementById('reportDailyTable').innerHTML=t+'</tbody></table>';
    }

    // Main Logic
    function loadInitialData(){ google.script.run.withSuccessHandler(initData).getInitialData(); }
    function initData(res){
      if(res.status==='error'){alert(res.message);return;}
      document.getElementById('displayInvNo').innerText=res.invNo;
      document.getElementById('invDate').value=res.date;
      var dl=document.getElementById('customerList'); dl.innerHTML=''; res.customers.forEach(c=>{var o=document.createElement('option');o.value=c;dl.appendChild(o)});
      productsDB=res.products; updateProductList();
      document.getElementById('tableBody').innerHTML=''; rowCount=0; addRow();
      renderDashboard(res.dashboard);
      document.getElementById('loading').classList.add('hidden');
    }
    function loadDashboard(){ 
      document.getElementById('statusList').innerHTML='Updating...';
      google.script.run.withSuccessHandler(renderDashboard).getDashboardData(document.getElementById('dashDate').value); 
    }
    function renderDashboard(data){
      var c=document.getElementById('statusList'); c.innerHTML='';
      if(!data||data.length===0){c.innerHTML='<div class="text-center mt-5 text-muted">‡πÑ‡∏°‡πà‡∏°‡∏µ‡∏£‡∏≤‡∏¢‡∏Å‡∏≤‡∏£</div>';return;}
      var fmt=(n)=>parseFloat(n||0).toLocaleString('en-US',{minimumFractionDigits:2});
      var gen=data.filter(i=>!i.isJetski), jet=data.filter(i=>i.isJetski);
      
      var itemHTML=(i)=>{
        var cls='bg-secondary';
        if(i.status=='‡∏™‡πà‡∏á‡∏ö‡∏¥‡∏•‡πÅ‡∏•‡πâ‡∏ß')cls='status-sent'; else if(i.status=='‡∏à‡πà‡∏≤‡∏¢‡πÅ‡∏•‡πâ‡∏ß')cls='status-paid'; else if(i.status=='‡πÅ‡∏Ñ‡∏ô‡πÄ‡∏ã‡∏¥‡∏•')cls='status-cancel';
        return `<div class="status-item"><div><div class="fw-bold" style="cursor:pointer" onclick="quickSearch('${i.invNo}')">${i.invNo}</div><small class="text-muted">${i.customer}</small></div>
                <div class="list-price">${fmt(i.total)}</div>
                <div class="dropdown"><button class="btn btn-sm ${cls} status-badge dropdown-toggle" data-bs-toggle="dropdown">${i.status||'‡∏£‡∏≠'}</button>
                <ul class="dropdown-menu dropdown-menu-end">
                  <li><a class="dropdown-item" onclick="updStat(event,'${i.invNo}','‡∏™‡πà‡∏á‡∏ö‡∏¥‡∏•‡πÅ‡∏•‡πâ‡∏ß')">üü° ‡∏™‡πà‡∏á‡∏ö‡∏¥‡∏•‡πÅ‡∏•‡πâ‡∏ß</a></li>
                  <li><a class="dropdown-item" onclick="updStat(event,'${i.invNo}','‡∏à‡πà‡∏≤‡∏¢‡πÅ‡∏•‡πâ‡∏ß')">üü¢ ‡∏à‡πà‡∏≤‡∏¢‡πÅ‡∏•‡πâ‡∏ß</a></li>
                  <li><a class="dropdown-item" onclick="updStat(event,'${i.invNo}','‡πÅ‡∏Ñ‡∏ô‡πÄ‡∏ã‡∏¥‡∏•')">üî¥ ‡πÅ‡∏Ñ‡∏ô‡πÄ‡∏ã‡∏¥‡∏•</a></li>
                </ul></div></div>`;
      };
      if(gen.length>0){ c.insertAdjacentHTML('beforeend','<div class="group-header">‡∏ó‡∏±‡πà‡∏ß‡πÑ‡∏õ</div>'); gen.forEach(i=>c.insertAdjacentHTML('beforeend',itemHTML(i))); }
      if(jet.length>0){ c.insertAdjacentHTML('beforeend','<div class="group-header group-jetski">Jetski</div>'); jet.forEach(i=>c.insertAdjacentHTML('beforeend',itemHTML(i))); }
    }
    function updStat(e,inv,st){ google.script.run.updateStatus(inv,st); setTimeout(loadDashboard,1000); }
    function quickSearch(inv){ document.getElementById('searchInput').value=inv; searchData(); }
    
    function saveData(type){
      var cust=document.getElementById('customer').value; if(!cust){alert("‡πÉ‡∏™‡πà‡∏ä‡∏∑‡πà‡∏≠‡∏•‡∏π‡∏Å‡∏Ñ‡πâ‡∏≤");return;}
      var items=[]; document.querySelectorAll('#tableBody tr').forEach(r=>{
          var d=r.querySelector('.item-desc').value;
          if(d)items.push({desc:d, qty:r.querySelector('.item-qty').value, price:r.querySelector('.item-price').value});
      });
      if(items.length===0){alert("‡πÑ‡∏°‡πà‡∏°‡∏µ‡∏™‡∏¥‡∏ô‡∏Ñ‡πâ‡∏≤");return;}
      
      document.getElementById('loading').classList.remove('hidden');
      document.getElementById('downloadArea').classList.add('hidden');
      var form={
        invNo:document.getElementById('displayInvNo').innerText, date:document.getElementById('invDate').value,
        customer:cust, address:document.getElementById('address').value, notes:document.getElementById('notes').value, items:items
      };
      google.script.run.withSuccessHandler(function(res){
        document.getElementById('loading').classList.add('hidden');
        if(res.status==='success'){
           document.getElementById('downloadBtn').href=res.url;
           document.getElementById('downloadArea').classList.remove('hidden');
           renderDashboard(res.dashboard);
           window.open(res.url,'_blank');
        } else alert(res.message);
      }).processInvoice(form,type);
    }
    function searchData(){
      var inv=document.getElementById('searchInput').value; if(!inv)return;
      document.getElementById('loading').classList.remove('hidden');
      google.script.run.withSuccessHandler(function(res){
         document.getElementById('loading').classList.add('hidden');
         if(res.status==='error'){alert(res.message);return;}
         document.getElementById('displayInvNo').innerText=res.invNo;
         document.getElementById('invDate').value=res.date;
         document.getElementById('customer').value=res.customer;
         document.getElementById('address').value=res.address;
         document.getElementById('notes').value=res.notes;
         document.getElementById('tableBody').innerHTML='';
         res.items.forEach(i=>addRow(i.desc,i.qty,i.price));
         if(res.items.length===0)addRow(); calcTotal();
      }).searchInvoice(inv);
    }
    function resetForm(){
       document.getElementById('searchInput').value=''; document.getElementById('customer').value=''; document.getElementById('address').value=''; document.getElementById('notes').value='';
       document.getElementById('downloadArea').classList.add('hidden'); loadInitialData();
    }
    function updateDatalist(id,list){var dl=document.getElementById(id);dl.innerHTML='';list.forEach(v=>{var o=document.createElement('option');o.value=v;dl.appendChild(o)});}
    function updateProductList(){var l=productsDB.map(p=>p.name);var dl=document.getElementById('productList');dl.innerHTML='';l.forEach(v=>{var o=document.createElement('option');o.value=v;dl.appendChild(o)});}
    
    function addRow(d="",q=1,p=0){
      rowCount++; var tr=document.createElement('tr');
      tr.innerHTML=`<td class="text-center text-muted">${rowCount}</td>
        <td><input class="form-control item-desc" list="productList" value="${d}" onchange="autoPrice(this);calc(this)" oninput="calc(this)"></td>
        <td><input type="number" class="form-control item-qty text-center" value="${q}" oninput="calc(this)"></td>
        <td><input type="number" class="form-control item-price text-end" value="${p}" oninput="calc(this)"></td>
        <td class="text-end fw-bold item-total pt-2">0.00</td>
        <td><button class="btn btn-outline-danger border-0" onclick="this.closest('tr').remove();calcT()"><i class="fa-solid fa-trash"></i></button></td>`;
      document.getElementById('tableBody').appendChild(tr); calc(tr.querySelector('.item-qty'));
    }
    function autoPrice(el){ var f=productsDB.find(p=>p.name===el.value); if(f)el.closest('tr').querySelector('.item-price').value=f.price; }
    function calc(el){
      var r=el.closest('tr'), q=r.querySelector('.item-qty'), p=r.querySelector('.item-price'), t=r.querySelector('.item-total');
      var tot=(parseFloat(q.value)||0)*(parseFloat(p.value)||0); t.innerText=tot.toLocaleString('en-US',{minimumFractionDigits:2});
      var isNeg=tot<0||r.querySelector('.item-desc').value.toLowerCase().includes('cash on tour');
      if(isNeg){q.classList.add('input-danger');p.classList.add('input-danger');t.classList.add('total-danger');}
      else{q.classList.remove('input-danger');p.classList.remove('input-danger');t.classList.remove('total-danger');}
      calcT();
    }
    function calcT(){
      var s=0; document.querySelectorAll('.item-total').forEach(t=>s+=parseFloat(t.innerText.replace(/,/g,'')));
      var g=document.getElementById('grandTotal'); g.innerText=s.toLocaleString('en-US',{minimumFractionDigits:2});
      if(s<0){g.classList.add('total-danger');g.classList.remove('text-primary');}else{g.classList.remove('total-danger');g.classList.add('text-primary');}
    }
  </script>
</body>
</html>
